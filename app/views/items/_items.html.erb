<table class="table table-striped table-bordered table-hover">
  <thead class="thead-dark">
    <tr>
      <th>Name</th>
      <th>Weight</th>
      <th>Price</th>
      <th>State</th>
      <th>Total Price</th>

      <!-- <th colspan="3"></th> -->
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.name %></td>
        <td><%= item.weight %></td>
        <td><%= item.price %></td>
        <td><%= item.state %></td>
        <td><%= item.total_price(item.price,item.weight ) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="digg_pagination">
    <%= will_paginate @items, :container => false %>
</div>
